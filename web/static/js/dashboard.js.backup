        if (response.ok) {
            console.log('â¹ï¸  ëª¨ë‹ˆí„°ë§ ì¤‘ì§€:', data.message);
            document.getElementById('monitoring-status').textContent = 'ì¤‘ì§€ë¨';
            document.getElementById('monitoring-status').className = 'badge bg-secondary';
            
