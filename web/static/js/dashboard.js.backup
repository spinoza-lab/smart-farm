        const data = await response.json();
        
        if (response.ok) {
            document.getElementById('alert-count-24h').textContent = data.alert_count_24h || 0;
        }
    } catch (error) {
        console.error('âŒ ìƒíƒœ ì—…ë°ì´íŠ¸ ì‹¤íŒ¨:', error);
